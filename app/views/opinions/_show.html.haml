- opinion ||= Opinion.new
- stock_id = opinion.stock ? opinion.stock.id : ""
- fields = [:killer, :sales_comments, :pl_comments, :bs_comments, :cf_comments, :credit_rating, :general_comments]

.show_opinion{:id=>stock_id}
  .date
    %strong
      Date:
    #{opinion.updated_at.strftime("%m/%d/%Y")}
  - fields.each do |field|
    %lbl #{field.to_s.capitalize}:
    .opinion_field= opinion[field]
  %lbl Action:
  %span.action= opinion.action
  %br
  %br
  = link_to "Update", "#", :class=>["editOpinion","btn"], :opinion_id=>opinion.id